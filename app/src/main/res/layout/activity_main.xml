<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#CBF59B"

    >

    <TextView
        android:id="@+id/activity_main_texte_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#0FAC0F"
        android:hint="Bienvenue. Quel est votre nom ?"
        />

    <EditText
        android:id="@+id/activity_main_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Saisissez votre nom !"/>

    <Button
        android:id="@+id/activity_main_btn_jouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jouez !"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:background="#2CD62C"

        />

    <TextView
        android:id="@+id/activity_main_texte_compteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFEB3B"
        android:hint="0 clic"
        android:layout_marginTop="20dp"

        />

    <Button
        android:id="@+id/activity_main_btn_raz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raz !"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#DB8181"
        />



</LinearLayout>
